generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  name          String
  password      String
  wallet        Float
  payment       Payment[]
  SuccesPayment SuccesPayment[]
  FailedPayment FailedPayment[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  order_id  String
  uuid      String
  amount    Float
  currency  String
  status    String
  isFinal   Boolean
  network   String
  addres    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model SuccesPayment {
  id        Int      @id @default(autoincrement())
  order_id  String
  uuid      String
  amount    Float
  currency  String
  status    String
  network   String
  createdAt DateTime @default(now())
  addres    String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model FailedPayment {
  id        Int      @id @default(autoincrement())
  order_id  String
  uuid      String
  amount    Float
  currency  String
  status    String
  network   String
  createdAt DateTime @default(now())
  addres    String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
